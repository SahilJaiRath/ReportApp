<?xml version="1.0" encoding="windows-1252" ?>
<!DOCTYPE ViewObject SYSTEM "jbo_03_01.dtd">
<!---->
<ViewObject
  xmlns="http://xmlns.oracle.com/bc4j"
  Name="AR_ITEMVVO"
  Version="12.2.1.11.57"
  InheritPersonalization="merge"
  BindingStyle="OracleName"
  CustomQuery="true"
  PageIterMode="Full">
  <DesignTime>
    <Attr Name="_isExpertMode" Value="true"/>
  </DesignTime>
  <Properties>
    <SchemaBasedProperties>
      <LABEL
        ResId="common.viwes.AR_ITEMVVO_LABEL"/>
    </SchemaBasedProperties>
  </Properties>
  <Variable
    Name="P272_UNIT"
    Kind="where"
    Type="java.lang.String"/>
  <Variable
    Name="P272_LOCATION"
    Kind="where"
    Type="java.lang.String"/>
  <Variable
    Name="P272_ITEM_GROUP"
    Kind="where"
    Type="java.lang.String"/>
  <Variable
    Name="P272_ITEM_S_GROUP"
    Kind="where"
    Type="java.lang.String"/>
  <SQLQuery><![CDATA[With Item_list 
AS 
(Select 'ALL' ITEM_CD, 'ALL' ITEM_NAME, 1 SN 
  From DUAL 
Union ALL 
Select ITEM_CD, ITEM_DESC ITEM_NAME, 2 SN 
  From VW_ALL_ITEM_MAS 
 Where Unit_Cd = :P272_UNIT 
   And DEFAULT_LOC = :P272_LOCATION 
   AND GROUP_CODE = DECODE(NVL(:P272_ITEM_GROUP, 'ALL'), 'ALL', GROUP_CODE, :P272_ITEM_GROUP) 
   AND SUB_GRP_CD = DECODE(NVL(:P272_ITEM_S_GROUP, 'ALL'), 'ALL', SUB_GRP_CD, :P272_ITEM_S_GROUP) 
) 
Select ITEM_CD, ITEM_NAME 
  From Item_List   
 Order BY SN, ITEM_NAME]]></SQLQuery>
  <ViewAttribute
    Name="ItemCd"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Precision="255"
    Type="java.lang.String"
    ColumnType="VARCHAR2"
    AliasName="ITEM_CD"
    Expression="ITEM_CD"
    SQLType="VARCHAR">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="30"/>
    </DesignTime>
  </ViewAttribute>
  <ViewAttribute
    Name="ItemName"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Precision="120"
    Type="java.lang.String"
    ColumnType="VARCHAR2"
    AliasName="ITEM_NAME"
    Expression="ITEM_NAME"
    SQLType="VARCHAR">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="120"/>
    </DesignTime>
  </ViewAttribute>
  <ResourceBundle>
    <PropertiesBundle
      PropertiesFile="model.ModelBundle"/>
  </ResourceBundle>
</ViewObject>
